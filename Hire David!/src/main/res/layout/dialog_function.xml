<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:weightSum="1"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="z"
                    android:id="@+id/textView5"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".05" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".95"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/x_z_image"
                        android:scaleType="fitXY"
                        android:layout_weight=".85" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="x"
                        android:id="@+id/textView4"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".15" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_weight=".5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="z"
                    android:id="@+id/textView7"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".05" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".95">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/y_z_image"
                        android:scaleType="fitXY"
                        android:layout_weight=".85" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="y"
                        android:id="@+id/textView6"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".15" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:id="@+id/textView8"
                android:layout_gravity="center_vertical"
                android:layout_weight=".05" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".95"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/x_y_image"
                    android:layout_marginTop="20dp"
                    android:layout_weight=".85"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="y"
                    android:id="@+id/textView9"
                    android:layout_weight=".15"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/function_text"
                android:layout_gravity="center_horizontal"
                android:text="z = a cos^e1 (x) + b sin^e2(y)"
                android:layout_weight=".1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="z      =      "
                    android:id="@+id/textView11"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="2"
                    android:id="@+id/a_edit"
                    android:digits="0123456789-"
                    android:imeOptions="actionDone"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:maxLength="3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=" cos"
                    android:id="@+id/textView12"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:inputType="numberSigned"
                        android:ems="2"
                        android:id="@+id/e1_edit"
                        android:imeOptions="actionDone"
                        android:layout_weight=".5"
                        android:digits="0123456789-"
                        android:textSize="12sp"
                        android:layout_gravity="bottom"
                        android:maxLength="3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/textView13"
                        android:layout_weight=".5" />

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:id="@+id/textView14"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/textView18"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="2"
                    android:id="@+id/b_edit"
                    android:digits="0123456789-"
                    android:imeOptions="actionDone"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:maxLength="3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=" sin"
                    android:id="@+id/textView15"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:inputType="numberSigned"
                        android:ems="2"
                        android:id="@+id/e2_edit"
                        android:imeOptions="actionDone"
                        android:layout_weight=".5"
                        android:digits="0123456789-"
                        android:textSize="12sp"
                        android:layout_gravity="bottom"
                        android:maxLength="3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/textView16"
                        android:layout_weight=".5" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="y"
                    android:id="@+id/textView17"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="ENTER"
                android:id="@+id/enter_function_button"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/dialog_function_blurb"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".5"
                android:textAlignment="center" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

